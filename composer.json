{
    "name": "lochmueller/seocli",
    "description": "SEO CLI Tool",
    "type": "project",
    "authors": [
        {
            "name": "Tim Lochm√ºller",
            "email": "tim@fruit-lab.de"
        }
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "require": {
        "php": "^7.1||^7.2||^7.3||^7.4",
        "ext-dom": "*",
        "ext-pcntl": "*",
        "guzzlehttp/guzzle": "^6.3||^7.2",
        "league/climate": "^3.6",
        "league/uri": "^6.3",
        "paquettg/php-html-parser": "^3.0||^3.1",
        "seostats/seostats": "^2.5",
        "t1gor/robots-txt-parser": "^0.2.4"
    },
    "autoload": {
        "psr-4": {
            "SEOCLI\\": "src/",
            "SEOstats\\": "vendor/seostats/seostats/SEOstats"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.12",
        "phpmetrics/phpmetrics": "^2.4"
    },
    "scripts": {
        "tool:php-cs-fixer": [
            "php-cs-fixer fix --config .php_cs"
        ],
        "tool:phpmetrics": [
            "phpmetrics --report-html=build/metrics ."
        ]
    },
    "bin": [
        "bin/seocli"
    ]
}
